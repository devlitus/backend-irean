{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "orders"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "paymentIntentId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "statusOrder": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "failed",
        "refunded"
      ]
    },
    "amount": {
      "type": "decimal"
    },
    "currency": {
      "type": "string",
      "maxLength": 3
    },
    "customerEmail": {
      "type": "email"
    },
    "customerName": {
      "type": "string"
    },
    "items": {
      "type": "json"
    }
  }
}
